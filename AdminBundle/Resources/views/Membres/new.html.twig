{% extends "TuniAdminBundle::layout.html.twig" %}

{% block content_middle_b %}
<ul class="breadcrumb">
	<li><a  class="glyphicons home"><i></i> juste1service</a></li>
	<li class="divider"></li>
	<li>{{'Administrateur'|trans({}, 'TuniAdminBundle') }}</li>
</ul>
<div class="separator"></div>

<div class="widget widget-2 widget-tabs widget-tabs-2 tabs-right border-bottom-none">
	<div class="widget-head">
		<ul>    
                        <li class="active"><a class="glyphicons settings" href="#account-settings" data-toggle="tab"><i></i>Membre settings</a></li>
			
			<li><a class="glyphicons user" href="#account-details" data-toggle="tab"><i></i>Membre detailles</a></li>
		</ul>
	</div>
</div>

<div class="innerLR">
   
<form class="form-horizontal" action="{{ path('membre_create') }}" {{ form_enctype(form) }}{{ form_enctype(formMembre) }} method="POST" >
    
        
    
    <div class="tab-content" style="padding: 0;" >
		<div class="tab-pane active" id="account-settings">
		<h2><a href="#" id="addScnt">Add Another Input Box</a></h2>

<div id="p_scents">
    <p>
        <label for="p_scnts"><input type="text" id="p_scnt" size="20" name="p_scnt" value="" placeholder="Input Value" /></label>
    </p>
</div>
			<div class="widget widget-2">
				<div class="widget-head">
					<h4 class="heading glyphicons edit"><i></i>Compte detailles</h4>
				</div>
				<div class="widget-body" style="padding-bottom: 0;">
                                    {% for type, messages in app.session.flashBag.all %}
                                        {% for message in messages %}
                                            <div class="{{ type }} alert-success">
                                                {{ message|trans({}, 'FOSUserBundle') }}
                                            </div>
                                        {% endfor %}
                                    {% endfor %}
					<div class="row-fluid">
                                            
                                                <div class="span3">
							<strong>Parametre de compte</strong>
							<p class="muted">Vous devez entrer les acc√©es pour cet membre.</p>
						</div>
						<div class="span9">
							<label for="inputUsername">username</label>
							{{ form_errors(form.username) }}
                                                        {{ form_widget(form.username) }}
                                                        <span "Username can't be changed"><i></i></span>
							<div class="separator"></div>
									
							<label for="email">email</label>
							{{ form_errors(form.email) }}
                                                        {{ form_widget(form.email) }}
                                                        
							<div class="separator"></div>
							
							<label for="inputPasswordNew">password</label>
							{{ form_errors(form.password.first) }}
                                                        {{ form_widget(form.password.first) }}
                                                        <div class="separator"></div>
							
							<label for="inputPasswordNew2">repeat password</label>
							{{ form_errors(form.password.second) }}
                                                        {{ form_widget(form.password.second) }}
                                                        <div class="separator"></div>
							
						</div>
						
					</div>
					
					
				</div>
			</div>
		</div>
			<div class="tab-pane" id="account-details">
		
			<div class="widget widget-2">
				<div class="widget-head">
					<h4 class="heading glyphicons edit"><i></i>Compte detailles</h4>
				</div>
				<div class="widget-body" style="padding-bottom: 0;">
                                    
					<div class="row-fluid">
                                           {% include "TuniAdminBundle:Membre:new_content.html.twig" %}
					</div>
					
					<div class="form-actions" style="margin: 0; padding-left: 60%;">
						<button type="submit" class="btn btn-icon btn-primary glyphicons circle_ok"><i></i>{{ 'registration.submit'|trans({}, 'FOSUserBundle') }}</button>
						<button type="reset" class="btn btn-icon btn-default glyphicons circle_remove"><i></i>Annuler</button>
					</div>
				</div>
			</div>
		</div>
		
	</div>
{{ form_rest(form) }}	    
</form>
</div>

  
{% endblock %}
