<ul class="breadcrumb">
	<li><a  class="glyphicons home"><i></i> juste1service</a></li>
	<li class="divider"></li>
	<li>{{'Administrateur'|trans({}, 'TuniAdminBundle') }}</li>
</ul>
<div class="separator"></div>
<div class="heading-buttons">
	<h3 class="glyphicons group"><i></i> Administrateurs</h3>
	
	<div class="clearfix"></div>
</div>
<div class="separator"></div>

<div class="innerLR">
	
<form class="form-horizontal" action="{{ path('Admin_user_registration_register') }}" {{ form_enctype(form) }} method="POST" class="fos_user_registration_register">
    
        
    
    <div class="tab-content" style="padding: 0;" >
		<div class="tab-pane active" id="account-details">
		
			<div class="widget widget-2">
				<div class="widget-head">
					<h4 class="heading glyphicons edit"><i></i>Ajout nouveau Administrateur</h4>
				</div>
				<div class="widget-body" style="padding-bottom: 0;">
                                    {% for type, messages in app.session.flashBag.all %}
                                        {% for message in messages %}
                                            <div class="{{ type }} alert-success">
                                                {{ message|trans({}, 'FOSUserBundle') }}
                                            </div>
                                        {% endfor %}
                                    {% endfor %}
					<div class="row-fluid">
						<div class="span6">
							
							<div class="control-group">
								<label class="control-label">Login</label>
								<div class="controls">
									{{ form_errors(form.username) }}
                                                                        {{ form_widget(form.username) }}
									
								</div>
							</div>
							<div class="control-group">
								<label class="control-label">Email</label>
								<div class="controls">
									<div class="input-append">
										{{ form_errors(form.email) }}
                                                                                {{ form_widget(form.email) }}
                                                                               <span " "><i></i></span>
									</div>
								</div>
							</div>
                                                    <div class="control-group">
							<label class="control-label">Mot de passe</label>
									<div class="controls">
									{{ form_errors(form.plainPassword.first) }}
                                                                        {{ form_widget(form.plainPassword.first) }}
                                                                                <span " "><i></i></span>
								</div>
							</div>
                                                     <div class="control-group">
							<label class="control-label">Confirmation</label>
									<div class="controls">
									{{ form_errors(form.plainPassword.second) }}
                                                                        {{ form_widget(form.plainPassword.second) }}
                                                                                <span " "><i></i></span>
								</div>
							</div>
						
                                                    <div class="control-group">
								<label class="control-label">Roles</label>
								<div class="controls roles">
									{{ form_errors(form.roles) }}
                                                                        {{ form_widget(form.roles) }}
									<span "Role is mandatory"><i></i></span>
								</div>
							</div>
							
							
						</div>
					</div>
					
					<div class="form-actions" style="margin: 0;">
						<button type="submit" class="btn btn-icon btn-primary glyphicons circle_ok"><i></i>{{ 'registration.submit'|trans({}, 'FOSUserBundle') }}</button>
                                                <button type="reset" style="float:right;" class="btn btn-icon btn-default glyphicons circle_remove"><i></i>Annuler</button>
                                        </div>
				</div>
			</div>
		</div>
		
	</div>
{{ form_rest(form) }}	    
</form>
</div>