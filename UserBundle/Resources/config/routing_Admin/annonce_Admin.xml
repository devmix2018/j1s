<?xml version="1.0" encoding="UTF-8" ?>

<routes xmlns="http://symfony.com/schema/routing"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://symfony.com/schema/routing http://symfony.com/schema/routing/routing-1.0.xsd">

    <route id="annonce" pattern="/">
        <default key="_controller">TuniAnnonceBundle:Annonce:index</default>
        <requirement key="_method">GET</requirement>
    </route>
    <route id="annonce_create" pattern="/create">
        <default key="_controller">TuniAnnonceBundle:Annonce:create</default>
        <requirement key="_method">POST</requirement>
    </route>

    <route id="annonce_new" pattern="/new">
        <default key="_controller">TuniAnnonceBundle:Annonce:new</default>
        <requirement key="_method">GET</requirement>
    </route>

    <route id="annonce_show" pattern="/{id}/show">
        <default key="_controller">TuniAnnonceBundle:Annonce:show</default>
        <requirement key="_method">GET</requirement>
    </route>
    
    <route id="annonce_edit" pattern="/{id}/edit">
        <default key="_controller">TuniAnnonceBundle:Annonce:edit</default>
        <requirement key="_method">GET</requirement>
    </route>
    
    <route id="annonce_update" pattern="/{id}/update">
        <default key="_controller">TuniAnnonceBundle:Annonce:update</default>
        <requirement key="_method">POST</requirement>
    </route>
    
    <route id="annonce_delete" pattern="/{id}/delete">
        <default key="_controller">TuniAnnonceBundle:Annonce:delete</default>
         <requirement key="_method">GET</requirement>
    </route>

    <route id="remplir_cb_Ville" pattern="/remplir_cb_Ville">
        <default key="_controller">TuniAnnonceBundle:Annonce:remplirVille</default>
        <requirement key="_method">POST</requirement>
    </route>
<route id="remplir_cb_Region" pattern="/remplir_cb_Region">
        <default key="_controller">TuniAnnonceBundle:Annonce:remplirRegion</default>
        <requirement key="_method">POST</requirement>
    </route>
    <route id="remplir_cb_Categorie" pattern="/remplir_cb_Categorie">
        <default key="_controller">TuniAnnonceBundle:Annonce:remplirCategorie</default>
        <requirement key="_method">POST</requirement>
    </route> 
    <route id="remplir_Attributs" pattern="/remplir_Attributs">
        <default key="_controller">TuniAnnonceBundle:Annonce:remplirAttributs</default>
        <requirement key="_method">POST</requirement>
    </route> 
    <route id="remplir_AttributsVals" pattern="/remplir_AttributsVals">
        <default key="_controller">TuniAnnonceBundle:Annonce:remplirAttributsVals</default>
        <requirement key="_method">POST</requirement>
    </route> 
    
    <route id="setStatutAnnonce" pattern="/setStatutAnnonce">
        <default key="_controller">TuniAnnonceBundle:Annonce:setStatutAnnonce</default>
        <requirement key="_method">POST</requirement>
    </route>
    <route id="annonce_deleteliste" pattern="/deleteliste">
        <default key="_controller">TuniAnnonceBundle:Annonce:deleteliste</default>
        <requirement key="_method">POST</requirement>
    </route>
</routes>