<?xml version="1.0" encoding="UTF-8" ?>

<routes xmlns="http://symfony.com/schema/routing"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://symfony.com/schema/routing http://symfony.com/schema/routing/routing-1.0.xsd">

    <route id="attribut" pattern="/">
        <default key="_controller">TuniAnnonceBundle:Attribut:index</default>
        <requirement key="_method">GET</requirement>
    </route>
    <route id="attribut_create" pattern="/create">
        <default key="_controller">TuniAnnonceBundle:Attribut:create</default>
        <requirement key="_method">POST</requirement>
    </route>

    <route id="attribut_new" pattern="/new">
        <default key="_controller">TuniAnnonceBundle:Attribut:new</default>
        <requirement key="_method">GET</requirement>
    </route>

    <route id="attribut_show" pattern="/{id}/show">
        <default key="_controller">TuniAnnonceBundle:Attribut:show</default>
        <requirement key="_method">GET</requirement>
    </route>
    
    <route id="attribut_edit" pattern="/{id}/edit">
        <default key="_controller">TuniAnnonceBundle:Attribut:edit</default>
        <requirement key="_method">GET</requirement>
    </route>
    
    <route id="attribut_update" pattern="/{id}/update">
        <default key="_controller">TuniAnnonceBundle:Attribut:update</default>
        <requirement key="_method">POST</requirement>
    </route>
    
    <route id="attribut_delete" pattern="/{id}/delete">
        <default key="_controller">TuniAnnonceBundle:Attribut:delete</default>
         <requirement key="_method">GET</requirement>
    </route>
<route id="attribut_deleteliste" pattern="/deleteliste">
        <default key="_controller">TuniAnnonceBundle:Attribut:deleteliste</default>
        <requirement key="_method">POST</requirement>
    </route>

</routes>
