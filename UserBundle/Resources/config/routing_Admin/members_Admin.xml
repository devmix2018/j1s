<?xml version="1.0" encoding="UTF-8" ?>

<routes xmlns="http://symfony.com/schema/routing"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://symfony.com/schema/routing http://symfony.com/schema/routing/routing-1.0.xsd">

    <route id="membres" pattern="/">
        <default key="_controller">TuniAdminBundle:Membre:membres</default>
        <requirement key="_method">GET</requirement>
    </route>
     <route id="membres_delete" pattern="/{id}/membredelete">
        <default key="_controller">TuniAdminBundle:Membre:membresdelete</default>
         <requirement key="_method">GET</requirement>
    </route>
    <route id="membres_show" pattern="/{id}/membresshow">
        <default key="_controller">TuniAdminBundle:Membre:membresshow</default>
        <requirement key="_method">GET</requirement>
    </route>
    <route id="membres_deleteliste" pattern="/deleteliste">
        <default key="_controller">TuniAnnonceBundle:Membre:deleteliste</default>
        <requirement key="_method">POST</requirement>
    </route>
</routes>
