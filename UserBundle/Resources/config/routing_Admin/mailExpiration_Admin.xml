<?xml version="1.0" encoding="UTF-8" ?>

<routes xmlns="http://symfony.com/schema/routing"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://symfony.com/schema/routing http://symfony.com/schema/routing/routing-1.0.xsd">

   
    <route id="mailExpiration" pattern="/">
        <default key="_controller">TuniAnnonceBundle:MailExpiration:index</default>
        <requirement key="_method">GET</requirement>
    </route>
    <route id="mailExpiration_create" pattern="/create">
        <default key="_controller">TuniAnnonceBundle:MailExpiration:create</default>
        <requirement key="_method">POST</requirement>
    </route>

    <route id="mailExpiration_new" pattern="/new">
        <default key="_controller">TuniAnnonceBundle:MailExpiration:new</default>
        <requirement key="_method">GET</requirement>
    </route>

    <route id="mailExpiration_show" pattern="/{id}/show">
        <default key="_controller">TuniAnnonceBundle:MailExpiration:show</default>
        <requirement key="_method">GET</requirement>
    </route>
    
    <route id="mailExpiration_edit" pattern="/{id}/edit">
        <default key="_controller">TuniAnnonceBundle:MailExpiration:edit</default>
        <requirement key="_method">GET</requirement>
    </route>
    
    <route id="mailExpiration_update" pattern="/{id}/update">
        <default key="_controller">TuniAnnonceBundle:MailExpiration:update</default>
        <requirement key="_method">POST</requirement>
    </route>
    
    <route id="mailExpiration_delete" pattern="/{id}/delete">
        <default key="_controller">TuniAnnonceBundle:MailExpiration:delete</default>
         <requirement key="_method">GET</requirement>
    </route>

<route id="mailExpiration_deleteliste" pattern="/deleteliste">
        <default key="_controller">TuniAnnonceBundle:MailExpiration:deleteliste</default>
        <requirement key="_method">POST</requirement>
    </route>
</routes>
