<?xml version="1.0" encoding="UTF-8" ?>

<routes xmlns="http://symfony.com/schema/routing"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://symfony.com/schema/routing http://symfony.com/schema/routing/routing-1.0.xsd">

    <route id="temoignage" pattern="/">
        <default key="_controller">TuniAnnonceBundle:Temoignage:index</default>
        <requirement key="_method">GET</requirement>
    </route>
    <route id="temoignage_create" pattern="/create">
        <default key="_controller">TuniAnnonceBundle:Temoignage:create</default>
        <requirement key="_method">POST</requirement>
    </route>

    <route id="temoignage_new" pattern="/new">
        <default key="_controller">TuniAnnonceBundle:Temoignage:new</default>
        <requirement key="_method">GET</requirement>
    </route>

    <route id="temoignage_show" pattern="/{id}/show">
        <default key="_controller">TuniAnnonceBundle:Temoignage:show</default>
        <requirement key="_method">GET</requirement>
    </route>
    
    <route id="temoignage_edit" pattern="/{id}/edit">
        <default key="_controller">TuniAnnonceBundle:Temoignage:edit</default>
        <requirement key="_method">GET</requirement>
    </route>
    
    <route id="temoignage_update" pattern="/{id}/update">
        <default key="_controller">TuniAnnonceBundle:Temoignage:update</default>
        <requirement key="_method">POST</requirement>
    </route>
    
    <route id="temoignage_delete" pattern="/{id}/delete">
        <default key="_controller">TuniAnnonceBundle:Temoignage:delete</default>
         <requirement key="_method">GET</requirement>
    </route>


</routes>
