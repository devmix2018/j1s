<?xml version="1.0" encoding="UTF-8" ?>

<routes xmlns="http://symfony.com/schema/routing"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://symfony.com/schema/routing http://symfony.com/schema/routing/routing-1.0.xsd">

    <route id="categorie" pattern="/">
        <default key="_controller">TuniAnnonceBundle:Categorie:index</default>
        <requirement key="_method">GET</requirement>
    </route>
    <route id="categorie_create" pattern="/create">
        <default key="_controller">TuniAnnonceBundle:Categorie:create</default>
        <requirement key="_method">POST</requirement>
    </route>

    <route id="categorie_new" pattern="/new">
        <default key="_controller">TuniAnnonceBundle:Categorie:new</default>
        <requirement key="_method">GET</requirement>
    </route>

    <route id="categorie_show" pattern="/{id}/show">
        <default key="_controller">TuniAnnonceBundle:Categorie:show</default>
        <requirement key="_method">GET</requirement>
    </route>
    
    <route id="categorie_edit" pattern="/{id}/edit">
        <default key="_controller">TuniAnnonceBundle:Categorie:edit</default>
        <requirement key="_method">GET</requirement>
    </route>
    
    <route id="categorie_update" pattern="/{id}/update">
        <default key="_controller">TuniAnnonceBundle:Categorie:update</default>
        <requirement key="_method">POST</requirement>
    </route>
    
    <route id="categorie_delete" pattern="/{id}/delete">
        <default key="_controller">TuniAnnonceBundle:Categorie:delete</default>
         <requirement key="_method">GET</requirement>
    </route>
<route id="categorie_deleteliste" pattern="/deleteliste">
        <default key="_controller">TuniAnnonceBundle:Categorie:deleteliste</default>
        <requirement key="_method">POST</requirement>
    </route>

</routes>
