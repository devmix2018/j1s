<?xml version="1.0" encoding="UTF-8" ?>

<routes xmlns="http://symfony.com/schema/routing"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://symfony.com/schema/routing http://symfony.com/schema/routing/routing-1.0.xsd">

   
    <route id="Slider" pattern="/">
        <default key="_controller">TuniAnnonceBundle:Slider:index</default>
        <requirement key="_method">GET</requirement>
    </route>
    <route id="Slider_create" pattern="/create">
        <default key="_controller">TuniAnnonceBundle:Slider:create</default>
        <requirement key="_method">POST</requirement>
    </route>

    <route id="Slider_new" pattern="/new">
        <default key="_controller">TuniAnnonceBundle:Slider:new</default>
        <requirement key="_method">GET</requirement>
    </route>

    <route id="Slider_show" pattern="/{id}/show">
        <default key="_controller">TuniAnnonceBundle:Slider:show</default>
        <requirement key="_method">GET</requirement>
    </route>
    
    <route id="Slider_edit" pattern="/{id}/edit">
        <default key="_controller">TuniAnnonceBundle:Slider:edit</default>
        <requirement key="_method">GET</requirement>
    </route>
    
    <route id="Slider_update" pattern="/{id}/update">
        <default key="_controller">TuniAnnonceBundle:Slider:update</default>
        <requirement key="_method">POST</requirement>
    </route>
    
    <route id="Slider_delete" pattern="/{id}/delete">
        <default key="_controller">TuniAnnonceBundle:Slider:delete</default>
         <requirement key="_method">GET</requirement>
    </route>
<route id="Slider_deleteliste" pattern="/deleteliste">
        <default key="_controller">TuniAnnonceBundle:Slider:deleteliste</default>
        <requirement key="_method">POST</requirement>
    </route>


</routes>
