<?xml version="1.0" encoding="UTF-8" ?>

<routes xmlns="http://symfony.com/schema/routing"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://symfony.com/schema/routing http://symfony.com/schema/routing/routing-1.0.xsd">

   
    <route id="Article" pattern="/">
        <default key="_controller">TuniAnnonceBundle:Article:index</default>
        <requirement key="_method">GET</requirement>
    </route>
    <route id="Article_create" pattern="/create">
        <default key="_controller">TuniAnnonceBundle:Article:create</default>
        <requirement key="_method">POST</requirement>
    </route>

    <route id="Article_new" pattern="/new">
        <default key="_controller">TuniAnnonceBundle:Article:new</default>
        <requirement key="_method">GET</requirement>
    </route>

    <route id="Article_show" pattern="/{id}/show">
        <default key="_controller">TuniAnnonceBundle:Article:show</default>
        <requirement key="_method">GET</requirement>
    </route>
    
    <route id="Article_edit" pattern="/{id}/edit">
        <default key="_controller">TuniAnnonceBundle:Article:edit</default>
        <requirement key="_method">GET</requirement>
    </route>
    
    <route id="Article_update" pattern="/{id}/update">
        <default key="_controller">TuniAnnonceBundle:Article:update</default>
        <requirement key="_method">POST</requirement>
    </route>
    
    <route id="Article_delete" pattern="/{id}/delete">
        <default key="_controller">TuniAnnonceBundle:Article:delete</default>
         <requirement key="_method">GET</requirement>
    </route>

<route id="Article_deleteliste" pattern="/deleteliste">
        <default key="_controller">TuniAnnonceBundle:Article:deleteliste</default>
        <requirement key="_method">POST</requirement>
    </route>
</routes>
