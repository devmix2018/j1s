<?xml version="1.0" encoding="UTF-8" ?>

<routes xmlns="http://symfony.com/schema/routing"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://symfony.com/schema/routing http://symfony.com/schema/routing/routing-1.0.xsd">

    
    <route id="service-express" pattern="/">
        <default key="_controller">TuniAnnonceBundle:ServiceExpress:index</default>
        <requirement key="_method">GET</requirement>
    </route>
    <route id="service-express_create" pattern="/create">
        <default key="_controller">TuniAnnonceBundle:ServiceExpress:create</default>
        <requirement key="_method">POST</requirement>
    </route>

    <route id="service-express_new" pattern="/new">
        <default key="_controller">TuniAnnonceBundle:ServiceExpress:new</default>
        <requirement key="_method">GET</requirement>
    </route>

    <route id="service-express_show" pattern="/{id}/show">
        <default key="_controller">TuniAnnonceBundle:ServiceExpress:show</default>
        <requirement key="_method">GET</requirement>
    </route>
    
    <route id="service-express_edit" pattern="/{id}/edit">
        <default key="_controller">TuniAnnonceBundle:ServiceExpress:edit</default>
        <requirement key="_method">GET</requirement>
    </route>
    
    <route id="service-express_update" pattern="/{id}/update">
        <default key="_controller">TuniAnnonceBundle:ServiceExpress:update</default>
        <requirement key="_method">POST</requirement>
    </route>
    
    <route id="service-express_delete" pattern="/{id}/delete">
        <default key="_controller">TuniAnnonceBundle:ServiceExpress:delete</default>
         <requirement key="_method">GET</requirement>
    </route>

<route id="service-express_deleteliste" pattern="/deleteliste">
        <default key="_controller">TuniAnnonceBundle:ServiceExpress:deleteliste</default>
        <requirement key="_method">POST</requirement>
    </route>

</routes>
