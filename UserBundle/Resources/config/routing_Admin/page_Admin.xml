<?xml version="1.0" encoding="UTF-8" ?>

<routes xmlns="http://symfony.com/schema/routing"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://symfony.com/schema/routing http://symfony.com/schema/routing/routing-1.0.xsd">

   
    <route id="page" pattern="/">
        <default key="_controller">TuniAnnonceBundle:Page:index</default>
        <requirement key="_method">GET</requirement>
    </route>
    <route id="page_create" pattern="/create">
        <default key="_controller">TuniAnnonceBundle:Page:create</default>
        <requirement key="_method">POST</requirement>
    </route>

    <route id="page_new" pattern="/new">
        <default key="_controller">TuniAnnonceBundle:Page:new</default>
        <requirement key="_method">GET</requirement>
    </route>

    <route id="page_show" pattern="/{id}/show">
        <default key="_controller">TuniAnnonceBundle:Page:show</default>
        <requirement key="_method">GET</requirement>
    </route>
    
    <route id="page_edit" pattern="/{id}/edit">
        <default key="_controller">TuniAnnonceBundle:Page:edit</default>
        <requirement key="_method">GET</requirement>
    </route>
    
    <route id="page_update" pattern="/{id}/update">
        <default key="_controller">TuniAnnonceBundle:Page:update</default>
        <requirement key="_method">POST</requirement>
    </route>
    
    <route id="page_delete" pattern="/{id}/delete">
        <default key="_controller">TuniAnnonceBundle:Page:delete</default>
         <requirement key="_method">GET</requirement>
    </route>
<route id="page_deleteliste" pattern="/deleteliste">
        <default key="_controller">TuniAnnonceBundle:Page:deleteliste</default>
        <requirement key="_method">POST</requirement>
    </route>


</routes>
