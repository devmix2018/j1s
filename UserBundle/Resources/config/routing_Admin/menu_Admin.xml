<?xml version="1.0" encoding="UTF-8" ?>

<routes xmlns="http://symfony.com/schema/routing"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://symfony.com/schema/routing http://symfony.com/schema/routing/routing-1.0.xsd">

   
    <route id="menu" pattern="/">
        <default key="_controller">TuniAnnonceBundle:Menu:index</default>
        <requirement key="_method">GET</requirement>
    </route>
    <route id="menu_create" pattern="/create">
        <default key="_controller">TuniAnnonceBundle:Menu:create</default>
        <requirement key="_method">POST</requirement>
    </route>

    <route id="menu_new" pattern="/new">
        <default key="_controller">TuniAnnonceBundle:Menu:new</default>
        <requirement key="_method">GET</requirement>
    </route>

    <route id="menu_show" pattern="/{id}/show">
        <default key="_controller">TuniAnnonceBundle:Menu:show</default>
        <requirement key="_method">GET</requirement>
    </route>
    
    <route id="menu_edit" pattern="/{id}/edit">
        <default key="_controller">TuniAnnonceBundle:Menu:edit</default>
        <requirement key="_method">GET</requirement>
    </route>
    
    <route id="menu_update" pattern="/{id}/update">
        <default key="_controller">TuniAnnonceBundle:Menu:update</default>
        <requirement key="_method">POST</requirement>
    </route>
    
    <route id="menu_delete" pattern="/{id}/delete">
        <default key="_controller">TuniAnnonceBundle:Menu:delete</default>
         <requirement key="_method">GET</requirement>
    </route>
<route id="menu_deleteliste" pattern="/deleteliste">
        <default key="_controller">TuniAnnonceBundle:Menu:deleteliste</default>
        <requirement key="_method">POST</requirement>
    </route>

</routes>
