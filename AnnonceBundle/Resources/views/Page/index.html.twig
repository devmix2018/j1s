
{% extends "TuniAdminBundle::layout.html.twig" %}

{% block content_middle_b %}
<ul class="breadcrumb">
    <li><a  class="glyphicons home"><i></i> juste1service</a></li>
    <li class="divider"></li>
    <li>{{'Pages'|trans({}, 'TuniAdminBundle') }}</li>
</ul>
<div class="separator"></div>

<div class="heading-buttons">
    <h3 class="glyphicons group"><i></i> Pages</h3>
     <div class="buttons pull-right">
        <a href="{{ path('page_new') }}" class="btn btn-primary btn-icon glyphicons circle_plus"><i></i>Ajouter page</a>
    </div>
    <div class="clearfix"></div>
</div>
<div class="separator"></div>
<div class="widget widget-2" style="margin: 0;">
    <div class="widget-head">
        <h4 class="heading glyphicons list"><i></i> Gérer les pages</h4>
    </div>
    <div class="widget-body">
        <div class="separator bottom form-inline small">
            total page : {{total}}

            <span class="pull-right">


            </span>
        </div>
        <form id="adminsform" name="adminsform">
                    {% for type, messages in app.session.flashBag.all %}
                                        {% for message in messages %}
                <div class="{{ type }} alert-success">
                                                {{ message|trans({}, 'FOSUserBundle') }}
                    </div> <br>
                                        {% endfor %}
                    {% endfor %}
                    <table class="table table-bordered table-condensed table-striped table-vertical-center checkboxs js-table-sortable ui-sortable">
                        <thead>
                            <tr>
                                <th style="width: 1%;" class="uniformjs"><input type="checkbox" /></th>
                                <th style="width: 5%;" class="center">{{ knp_pagination_sortable(pagination, 'Nom', 'a.nomPage') }}</th>
                                <th style="width: 5%;" class="center">{{ knp_pagination_sortable(pagination, 'Mots-cles', 'a.motCles') }}</th>
                                <th style="width: 30%;" class="center">{{ knp_pagination_sortable(pagination, 'Description', 'a.descriptionPge') }}</th>
                                <th style="width: 40%;" class="center">{{ knp_pagination_sortable(pagination, 'Url page', 'a.urlPage') }}</th>
                                <th class="center" style="width: 20%;">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                                {% if total==0 %}<tr class="selectable"><td colspan="7" >Aucun page</td></tr>{% endif%}
				{% for entity in pagination %}
                                <tr class="selectable">
                                    <td class="center uniformjs"><input type="checkbox" id="admin_{{entity.id}}" name="admin_{{entity.id}}"/></td>
                                    <td class="center">{{ entity.nomPage }}</td>
                                    <td class="center">{{ entity.motCles }}</td>
                                    <td class="center">{% if entity.descriptionPage %}{{ entity.DescriptionPage}}{% endif%}</td>
                                    <td class="center">{% if entity.urlPage %}{{ entity.UrlPage}}{% endif%}</td>
                                    <td class="center">
                                         <a class="btn-action glyphicons eye_open btn-info" href="{{ path('page_show',{'id':entity.id}) }}"><i></i></a>
                                        <a href="{{ path('page_edit',{'id':entity.id}) }}" class="btn-action glyphicons pencil btn-success"><i></i></a>
                                        
                                        <a href="{{ path('page_delete',{'id':entity.id}) }}" onclick="return(confirm('Etes-vous sûr de vouloir supprimer cet page?'));" class="btn-action glyphicons remove_2 btn-danger"><i></i></a>
                                    </td>
                                </tr>
				{% endfor %}
                            </tbody>
                        </table>
                    </form>        
                    <div class="separator top form-inline small">
                        
                        <div class="pull-left checkboxs_actions hide"> 				<label class="strong">Action:</label> 				<select class="selectpicker" id="selectAction" data-style="btn-default btn-small">                                     <option value="supprimer">Supprimer</option> 					 				</select> 			</div>                         <div class="pagination pagination-small pull-right" style="margin: 0;">
				 {{ knp_pagination_render(pagination) }}
                            </div>

                            <div class="clearfix"></div>
                        </div>
                    </div>
                </div>

                <br/>


{% endblock content_middle_b %}

{% block javascripts %}
{{parent()}}
                <script>
                    $("#selectAction").change(function() {

                        if ($("#selectAction").val() == "supprimer") {
                            var form_data = $('#adminsform').serialize();
                            $.ajax({
                                type: "POST",
                                url: "{{ path('page_deleteliste') }}",
                                data: form_data,
                                cache: false,
                                success: function(data) {
                                    // alert(data);
                                    window.location = '{{ path('page') }}';
                                }
                            });
                            return false;
                        }
                    });
                    </script>
{% endblock %}
