
{% extends "TuniAdminBundle::layout.html.twig" %}




{% block content_middle_b %}
<ul class="breadcrumb">
	<li><a  class="glyphicons home"><i></i> juste1service</a></li>
	<li class="divider"></li>
	<li>{{'Alerts'|trans({}, 'TuniAdminBundle') }}</li>
</ul>
<div class="separator"></div>   

<div class="heading-buttons">
    <h3 class="glyphicons group"><i></i> Mail Expirations</h3>
   
    <div class="clearfix"></div>
</div>
<div class="separator"></div>

<div class="innerLR">
   
<form class="form-horizontal" action="{{ path('mailExpiration_create') }}" method="post" {{ form_enctype(form) }}>
    
        
    
    <div class="tab-content" style="padding: 0;" >
		<div class="tab-pane active" id="account-settings">
		
			<div class="widget widget-2">
				<div class="widget-head">
					<h4 class="heading glyphicons edit"><i></i>Ajouter Mail Expiration</h4>
				</div>
				<div class="widget-body" style="padding-bottom: 0;">
                                    {% for type, messages in app.session.flashBag.all %}
                                        {% for message in messages %}
                                            <div class="{{ type }} alert-success">
                                                {{ message|trans({}, 'FOSUserBundle') }}
                                            </div>
                                        {% endfor %}
                                    {% endfor %}
				
					<div class="row-fluid">
                                           

<div class=" control-group alpha">
    <label class="control-label alignleft">Objet</label>
    <div class="controls">
        <div class="input-append">
										{{ form_errors(form.objet) }}
                                                                                {{ form_widget(form.objet) }}
                
            </div>
        </div>
    </div>

        <div class=" control-group alpha">
            <label class="control-label alignleft">Message</label>
            <div class="controls">
									{{ form_errors(form.message) }}
                                                                        {{ form_widget(form.message) }}
                    
                </div>
            </div>

                            
                                
            <div class=" control-group alpha">
                <label class="control-label alignleft">Date envoie</label>
               
									<div class="controls">
                    <input type="text" name="dateExp" id="datepicker" value="" class="" />
					
                    </div>
                    
                </div>
{{ form_rest(form) }}	    

                                      
					</div>
					
					<div class="form-actions" style="margin: 0;">
						<button type="submit" class="btn btn-icon btn-primary glyphicons circle_ok"><i></i>{{ 'registration.submit'|trans({}, 'FOSUserBundle') }}</button>
						<button type="reset"  style="float:right;"  class="btn btn-icon btn-default glyphicons circle_remove"><i></i>Annuler</button>
					</div>
				</div>
			</div>
		</div>
		
	</div>
    
</form>
</div>

  
{% endblock %}

